<% content_for :title, "Editing user" %>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing Profile</h1>
  <%= render 'layouts/validation_errors',  validation_errors: @user&.errors if @user&.errors.present? %>

  <%= form_with(model: @user) do |form| %>
    <%= render 'form_fields', form: form %>

    <div class="my-5">
      <%= form.password_field :current_password, required: true, autocomplete: "current-password", placeholder: "Your current password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= form.submit "Update", class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </div>

      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        <%= link_to "Cancel", user_path(@user), class: "text-gray-700 underline hover:no-underline" %>
      </div>
    </div>
  <% end %>
</div>
