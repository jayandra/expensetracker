<div class="bg-white shadow rounded">
  <div class="px-4 py-2 sm:px-6 bg-gray-50 border-b border-gray-200">
    <p class="w-2xl text-me text-gray-500 font-bold"><%= category.new_record? ? "Create a new category record" : "Update category details" %></p>
  </div>

  <div class="p-4">
    <%= form_with(model: category) do |form| %>
      <% if category.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-3 mb-4">
          <h3 class="font-medium text-red-800">
            <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:
          </h3>
          <ul class="list-disc pl-5 mt-2 text-red-700">
            <% category.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :name, class: "block mb-1 text-gray-700" %>
        <%= form.text_field :name, class: "w-full p-2 border rounded", placeholder: "Category name" %>
      </div>

      <div class="mb-4">
        <%= form.label :parent_id, "Parent Category", class: "block mb-1 text-gray-700" %>
        <%= form.select :parent_id,
                        categories_selector(Category.all),
                        { include_blank: "No parent (top-level category)" },
                        { class: "w-full p-2 border rounded" } %>
      </div>

      <div class="flex justify-center pt-4">
        <%= link_to "Cancel", categories_path, class: "bg-white px-4 py-2 border rounded mr-2 text-gray-700" %>
        <%= form.submit class: "px-4 py-2 bg-indigo-600 text-white rounded" %>
      </div>
    <% end %>
  </div>
</div>